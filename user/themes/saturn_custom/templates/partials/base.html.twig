    {# <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" integrity="sha256-e5t1LfqGVLXhoGhXBNtKVwMQV9YnmesLBaBOCiuAUDI= sha384-zILoxgaabUljNcmzMnrdu0p3Bg9Y6B6D9e/DNKgfVpgz7mqz2jN5CbhhncD1rQ5z sha512-NV4zyPQp3iQOrvOMvzCVC8VJ7TTu9HAHGyeLXQOoLCuqLZvY8OTT7+X1E5nrZxsZY6pylHb0WtlWErR0CMIFDQ==" crossorigin="anonymous"> #}

    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css">

    {% block body %}
        <div class="content">
            <div class="container">
                {% block content %}{% endblock %}
                </div>
            </div>
        {% endblock %}

        <footer>
            <div class="container">
                <div class="units-row">
                    <div class="unit-50">
                        <p class="text-centered foot-cp">
                            <a href="{{ site.author.url }}">{{ site.author.footer }}</a>
                        </p>
                    </div>
                    <div class="unit-50">
                        <ul class="social list-flat right">
                            {% for item in site.social %}
                                <li><a href="{{ item.link }}"><i class="fa fa-{{ item.icon }}"></i></a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <p class="text-centered foot-cp">
                        <a href="{{ site.author.url2}}">{{ site.author.footer2 }}</a>
                    </p>
                </div>
            </div>
        </footer>
    </body>
    </html>
